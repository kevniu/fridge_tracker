<div class="container">
  <%= link_to 'New Product', new_product_path, {class: "btn btn-primary", id: "new-item-btn"} %>
  <table class="table">
    <thead class="thead-inverse">
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>
            <%= product.name %>
          </td>
          <td>
            <%= product.expiration %>
          </td>
          <td>
            <%= link_to 'Show', product %>
          </td>
          <td>
            <%= link_to 'Edit', edit_product_path(product) %>
          </td>
          <td>
            <%= link_to 'Destroy', product, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br/>
</div>
